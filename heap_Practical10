#include <iostream>
#include <vector>

using namespace std;

class Heap {
private:
    vector<int> heap;

    void heapifyUp(int index) {
        int parent = (index - 1) / 2;
        while (index > 0 && heap[index] > heap[parent]) {
            swap(heap[index], heap[parent]);
            index = parent;
            parent = (index - 1) / 2;
        }
    }

    void heapifyDown(int index) {
        int leftChild = 2 * index + 1;
        int rightChild = 2 * index + 2;
        int largest = index;

        if (leftChild < heap.size() && heap[leftChild] > heap[largest]) {
            largest = leftChild;
        }

        if (rightChild < heap.size() && heap[rightChild] > heap[largest]) {
            largest = rightChild;
        }

        if (largest != index) {
            swap(heap[index], heap[largest]);
            heapifyDown(largest);
        }
    }

public:
    void addElement(int element) {
        heap.push_back(element);
        heapifyUp(heap.size() - 1);
    }

    void removeMaxElement() {
        if (heap.empty()) {
            cout << "Heap is empty." << endl;
            return;
        }

        heap[0] = heap.back();
        heap.pop_back();
        heapifyDown(0);
    }

    int getMaxElement() const {
        if (heap.empty()) {
            cout << "Heap is empty." << endl;
            return -1; // Or any other appropriate default value
        }
        return heap[0];
    }

    int getSize() const {
        return heap.size();
    }
};

int main() {
    int numStudents;
    cout << "Enter the number of students: ";
    cin >> numStudents;

    Heap marksHeap;

    cout << "Enter the marks obtained by each student:\n";
    for (int i = 0; i < numStudents; i++) {
        int marks;
        cout << "Student " << i + 1 << ": ";
        cin >> marks;
        marksHeap.addElement(marks);
    }

    int maxMarks = marksHeap.getMaxElement();  // Maximum marks
    marksHeap.removeMaxElement();
    int minMarks = marksHeap.getMaxElement();  // Minimum marks

    cout << "Maximum marks: " << maxMarks << endl;
    cout << "Minimum marks: " << minMarks << endl;

    return 0;
}
